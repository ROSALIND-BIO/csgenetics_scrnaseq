/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.
    Use as follows:
        nextflow run nf-core/scrnaseq -profile test
----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    outdir = './results_test'
    tracedir = "${params.outdir}/pipeline_info"

    // Genome references
    star_index_dir = "s3://csgx.public.readonly/resources/test_profile_resources/reduced/STAR_2_7_11b/GRCh38.Ensembl109.GENCODEv44.test_profile/star/"
    gtf_path = "s3://csgx.public.readonly/resources/test_profile_resources/reduced/STAR_2_7_11b/GRCh38.Ensembl109.GENCODEv44.test_profile/genes/gencode.v44.primary_assembly.annotation.modified_seq_names.gene_subset_lof.reduced.gtf"
    barcode_list_path = "s3://csgx.public.readonly/resources/barcode_lists/IDT_IO_kit_v2.csv"
    
    // Input data
    input_csv = 's3://csgx.public.readonly/resources/test_profile_resources/test_input.csv'

    //Mitochondria prefixes
    mitochondria_chromosome = "MT"
    mixed_species = false
    hsap_mitochondria_chromosome = ""
    mmus_mitochondria_chromosome = ""
    hsap_gene_prefix = ""
    mmus_gene_prefix = ""
    purity = ""
}
